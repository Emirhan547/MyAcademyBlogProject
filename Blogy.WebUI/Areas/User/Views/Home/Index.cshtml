@using Blogy.Business.DTOs.BlogDtos
@model List<ResultBlogDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<h2>Kullanıcı Blog Sayfası</h2>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4">
            <div class="card mb-3">
                <img src="@item.CoverImage" class="card-img-top" />
                <div class="card-body">
                    <h5>@item.Title</h5>
                    <p>@(item.Description.Length > 150 ? item.Description.Substring(0, 150) + "..." : item.Description)</p>
                    <a href="/User/Blog/Detail/@item.Id" class="btn btn-primary">Oku</a>
                </div>
            </div>
        </div>
    }
</div>

