@using Blogy.Business.DTOs.BlogDtos
@model UpdateBlogDto

@{
    ViewData["Title"] = "Blog Düzenle";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<div class="container" style="margin-top:40px; margin-bottom:40px;">
    <div class="row justify-content-center">
        <div class="col-lg-10">

            <div class="card shadow-sm p-4">
                <h3 class="fw-bold mb-3">Blog Düzenle</h3>
                <p class="text-muted">Blog içeriğini güncelleyebilirsin.</p>

                <form method="post">
                    <input asp-for="Id" type="hidden" />

                    <label>Başlık</label>
                    <input asp-for="Title" class="form-control" />

                    <label class="mt-3">Açıklama</label>
                    <textarea asp-for="Description" rows="6" class="form-control"></textarea>

                    <label class="mt-3">Kapak Görseli</label>
                    <input asp-for="CoverImage" class="form-control" />

                    <label class="mt-3">Blog Görseli 1</label>
                    <input asp-for="BlogImage1" class="form-control" />

                    <label class="mt-3">Blog Görseli 2</label>
                    <input asp-for="BlogImage2" class="form-control" />
                    <select asp-for="CategoryId" asp-items="ViewBag.categories" class="form-control"></select>
                    <span class="text-danger" asp-validation-for="CategoryId"></span>

                    <button class="btn btn-primary mt-4">
                        <i class="bi bi-save"></i> Kaydet
                    </button>
                </form>

            </div>

        </div>
    </div>
</div>
