@using PagedList.Core
@using PagedList.Core.Mvc
@model IPagedList<Blogy.Business.DTOs.BlogDtos.ResultBlogDto>

@{
    ViewData["Title"] = "Bloglarım";
    Layout = "~/Views/UILayout/Index.cshtml";

    var options = PagedListRenderOptions.Bootstrap4PageNumbersPlusPrevAndNext;
    options.LinkToPreviousPageFormat = "Önceki";
    options.LinkToNextPageFormat = "Sonraki";
}

<div class="container mt-5 mb-5">
    <h2 class="fw-bold mb-4">Yazdığım Bloglar</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            Henüz blog yazmamışsınız. <a href="/Writer/Blog/Create">Yeni blog oluştur.</a>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-6 mb-4">
                    <div class="card shadow-sm h-100">

                        <img src="@item.CoverImage" class="card-img-top" style="height:200px; object-fit:cover;" />

                        <div class="card-body">
                            <h5 class="card-title">@item.Title</h5>

                            <p class="card-text text-muted">
                                @(item.Description.Length > 120
                                                        ? item.Description.Substring(0, 120) + "..."
                                                        : item.Description)
                    </p>

                            <p class="small mb-1">
                                <strong>Kategori:</strong> @item.Category?.Name
                            </p>

                            <p class="small text-muted">
                                @item.CreatedDate.ToString("dd.MM.yyyy")
                            </p>

                            <a href="/Writer/Blog/Update/@item.Id" class="btn btn-warning btn-sm">Düzenle</a>
                            <a href="/Writer/Blog/Delete/@item.Id"
                               class="btn btn-danger btn-sm"
                               onclick="return confirm('Silmek istediğine emin misin?');">
                                Sil
                            </a>
                        </div>

                    </div>
                </div>
                }
        </div>

        <div class="row text-center mt-4">
            <div class="col-md-12">
                <pager list="@Model" options="@options" asp-action="Index" asp-controller="Blog" />
            </div>
        </div>
    }
</div>
