@using Blogy.Business.DTOs.BlogDtos
@model List<ResultBlogDto>

@{
    ViewData["Title"] = "Bloglarım";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<div class="container" style="margin-top:40px; margin-bottom:60px; min-height:calc(100vh - 300px);">

    <div class="row mb-4 text-center">
        <h2 class="fw-bold">Bloglarım</h2>
        <p class="text-muted">Yazdığın bloglar burada listelenir.</p>
        <a href="/Writer/Blog/Create" class="btn btn-primary mt-2">
            <i class="bi bi-plus-circle"></i> Yeni Blog Yaz
        </a>
    </div>

    <div class="row g-4">
        @foreach (var blog in Model)
        {
            <div class="col-md-4">
                <div class="card shadow-sm h-100">

                    <img src="@blog.CoverImage"
                         class="card-img-top"
                         style="height:200px; object-fit:cover;" />

                    <div class="card-body">
                        <h5 class="card-title">@blog.Title</h5>
                        <p class="text-muted mb-1">@blog.Category.CategoryName</p>
                    </div>

                    <div class="card-footer bg-white border-0 d-flex justify-content-between">
                        <a href="/Writer/Blog/Update/@blog.Id" class="btn btn-outline-primary btn-sm">
                            <i class="bi bi-pencil"></i> Düzenle
                        </a>
                        <a href="/Writer/Blog/Delete/@blog.Id"
                           class="btn btn-outline-danger btn-sm"
                           onclick="return confirm('Silinsin mi?')">
                            <i class="bi bi-trash"></i> Sil
                        </a>
                    </div>

                </div>
            </div>
        }
    </div>

</div>
