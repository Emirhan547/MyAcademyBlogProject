@using Blogy.Business.DTOs.ContactDtos
@model GetContactMessageDetailDto
@{
    ViewData["Title"] = "Mesaj Detayı";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="midde_cont">
    <div class="container-fluid">

        <!-- Başlık -->
        <div class="row column_title">
            <div class="col-md-12">
                <div class="page_title">
                    <h2>Mesaj Detayı</h2>
                </div>
            </div>
        </div>

        <!-- İçerik -->
        <div class="row column1">
            <div class="col-md-8 offset-md-2">

                <div class="white_shd full margin_bottom_30">

                    <div class="full graph_head">
                        <div class="heading1 margin_0">
                            <h3>@Model.Subject</h3>
                        </div>
                    </div>

                    <div class="full padding_infor_info">

                        <p><strong>Gönderen:</strong> @Model.SenderName</p>
                        <p><strong>Email:</strong> @Model.SenderEmail</p>
                        <p><strong>Konu:</strong> @Model.Subject</p>

                        <hr />

                        <p><strong>Mesaj:</strong></p>
                        <div class="alert alert-secondary p-3">
                            @Model.Message
                        </div>

                        <hr />

                        <p><strong>Tespit Edilen Dil:</strong> @Model.DetectedLanguage</p>

                        <p><strong>AI Yanıtı:</strong></p>
                        <div class="alert alert-info p-3">
                            @Model.AutoReply
                        </div>

                        <p><strong>Yanıt Tarihi:</strong> @Model.RepliedDate</p>

                        <div class="mt-3 text-end">
                            <a href="/Admin/Contact/Index" class="btn btn-secondary">
                                <i class="fa fa-arrow-left"></i> Geri Dön
                            </a>
                        </div>

                    </div>

                </div>

            </div>
        </div>

    </div>
</div>
