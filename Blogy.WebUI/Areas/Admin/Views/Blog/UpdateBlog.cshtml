@model UpdateBlogDto
@{
    ViewData["Title"] = "Blog Güncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="midde_cont">
    <div class="container-fluid">

        <!-- Sayfa Başlığı -->
        <div class="row column_title">
            <div class="col-md-12">
                <div class="page_title">
                    <h2>Blog Güncelle</h2>
                </div>
            </div>
        </div>

        <!-- Form İçeriği -->
        <div class="row column1">
            <div class="col-md-12">
                <div class="white_shd full margin_bottom_30">

                    <div class="full graph_head">
                        <div class="heading1 margin_0">
                            <h3>Blog Bilgilerini Düzenleyin</h3>
                        </div>
                    </div>

                    <div class="full padding_infor_info">
                        <form method="post">

                            <input type="hidden" asp-for="Id" />

                            <div class="row">
                                <!-- Sol taraf -->
                                <div class="col-md-8">

                                    <div class="form-group mb-3">
                                        <label class="fw-bold">Blog Başlığı</label>
                                        <input asp-for="Title" class="form-control" />
                                        <span class="text-danger" asp-validation-for="Title"></span>
                                    </div>

                                    <div class="form-group mb-3">
                                        <label class="fw-bold">Açıklama</label>
                                        <textarea asp-for="Description" rows="8" class="form-control"></textarea>
                                        <span class="text-danger" asp-validation-for="Description"></span>
                                    </div>

                                    <div class="form-group mb-3">
                                        <label class="fw-bold">Kategori</label>
                                        <select asp-for="CategoryId" asp-items="@ViewBag.categories" class="form-control">
                                            <option value="">Kategori Seçiniz</option>
                                        </select>
                                        <span class="text-danger" asp-validation-for="CategoryId"></span>
                                    </div>

                                </div>

                                <!-- Sağ taraf -->
                                <div class="col-md-4">

                                    <div class="form-group mb-3">
                                        <label class="fw-bold">Kapak Resmi URL</label>
                                        <input asp-for="CoverImage" class="form-control" />
                                        <span class="text-danger" asp-validation-for="CoverImage"></span>
                                    </div>

                                    <div class="form-group mb-3">
                                        <label class="fw-bold">Blog Resmi 1</label>
                                        <input asp-for="BlogImage1" class="form-control" />
                                        <span class="text-danger" asp-validation-for="BlogImage1"></span>
                                    </div>

                                    <div class="form-group mb-3">
                                        <label class="fw-bold">Blog Resmi 2</label>
                                        <input asp-for="BlogImage2" class="form-control" />
                                        <span class="text-danger" asp-validation-for="BlogImage2"></span>
                                    </div>

                                </div>
                            </div>

                            <!-- Butonlar -->
                            <div class="mt-4 d-flex justify-content-between">
                                <a href="/Admin/Blog/Index" class="btn btn-secondary">
                                    <i class="fa fa-arrow-left"></i> Geri Dön
                                </a>

                                <button class="btn btn-primary">
                                    <i class="fa fa-save"></i> Kaydet
                                </button>
                            </div>

                        </form>

                    </div>

                </div>
            </div>
        </div>

    </div>
</div>
