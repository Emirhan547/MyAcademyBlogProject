@model List<ResultBlogDto>
@{
    ViewData["Title"] = "Bloglar";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="midde_cont">
    <div class="container-fluid">
        <!-- Sayfa başlığı -->
        <div class="row column_title">
            <div class="col-md-12">
                <div class="page_title">
                    <h2>Bloglar</h2>
                </div>
            </div>
        </div>

        <!-- İçerik -->
        <div class="row column1">
            <div class="col-md-12">
                <div class="white_shd full margin_bottom_30">
                    <div class="full graph_head">
                        <div class="heading1 margin_0">
                            <h3>Blog Listesi</h3>
                        </div>
                    </div>

                    <div class="full table_section padding_infor_info">
                        <div class="table-responsive-sm">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Blog Başlığı</th>
                                        <th>Açıklama</th>
                                        <th>Kategori</th>
                                        <th>İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int count = 0;
                                    }
                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        <tr>
                                            <td>@count</td>
                                            <td>
                                                <img src="@item.CoverImage" style="height:50px;width:50px;border-radius:5px;margin-right:8px;" />
                                                @item.Title
                                            </td>
                                            <td>@(item.Description?.Length > 100 ? item.Description.Substring(0, 100) + "..." : item.Description)</td>
                                            <td>@item.Category.Name</td>
                                            <td>
                                                <a href="/Admin/Blog/UpdateBlog/@item.Id" class="btn btn-sm btn-info">Güncelle</a>
                                                <a href="/Admin/Blog/DeleteBlog/@item.Id" class="btn btn-sm btn-danger" onclick="return confirm('Silmek istediğinizden emin misiniz?')">Sil</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
