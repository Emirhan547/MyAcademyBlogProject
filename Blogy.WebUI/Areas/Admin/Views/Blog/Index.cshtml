@model List<ResultBlogDto>
@{
    ViewData["Title"] = "Bloglar";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="midde_cont">
    <div class="container-fluid">

        <!-- Sayfa Başlığı -->
        <div class="row column_title">
            <div class="col-md-12">
                <div class="page_title d-flex justify-content-between align-items-center">
                    <h2 class="mb-0">Bloglar</h2>
                </div>
            </div>
        </div>

        <!-- İçerik -->
        <div class="row column1">
            <div class="col-md-12">
                <div class="white_shd full margin_bottom_30">

                    <div class="full graph_head">
                        <div class="heading1 margin_0">
                            <h3>Blog Listesi</h3>
                        </div>
                    </div>

                    <div class="full padding_infor_info">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover align-middle">
                                <thead class="table-dark">
                                    <tr>
                                        <th style="width: 60px">#</th>
                                        <th>Blog</th>
                                        <th>Açıklama</th>
                                        <th>Kategori</th>
                                        <th style="width:160px">İşlemler</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    @if (Model == null || !Model.Any())
                                    {
                                        <tr>
                                            <td colspan="5" class="text-center p-4 text-muted">
                                                Kayıtlı blog bulunamadı.
                                            </td>
                                        </tr>
                                    }
                                    else
                                    {
                                        int count = 0;
                                        foreach (var item in Model)
                                        {
                                            count++;
                                            <tr>
                                                <td>@count</td>

                                                <td>
                                                    <div class="d-flex align-items-center">
                                                        <img src="@item.CoverImage"
                                                             class="rounded"
                                                             style="height:50px;width:50px;object-fit:cover;margin-right:10px;" />

                                                        <strong>@item.Title</strong>
                                                    </div>
                                                </td>

                                                <td>
                                                    @(item.Description?.Length > 80
                                                                                                ? item.Description.Substring(0, 80) + "..."
                                                                                                : item.Description)
                                        </td>

                                                <td>@item.Category.Name</td>

                                                <td>
                                                    <a href="/Admin/Blog/UpdateBlog/@item.Id"
                                                       class="btn btn-sm btn-primary me-1">
                                                        <i class="fa fa-edit"></i> Düzenle
                                                    </a>

                                                    <a href="/Admin/Blog/DeleteBlog/@item.Id"
                                                       onclick="return confirm('Bu blogu silmek istediğinize emin misiniz?')"
                                                       class="btn btn-sm btn-danger">
                                                        <i class="fa fa-trash"></i> Sil
                                                    </a>
                                                </td>
                                            </tr>
                                                                        }
                                    }
                                </tbody>

                            </table>
                        </div>
                    </div>

                </div>
            </div>
        </div>

    </div>
</div>
