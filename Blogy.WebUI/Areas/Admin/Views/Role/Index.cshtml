@model List<AppRole>
@{
    ViewData["Title"] = "Rol Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="midde_cont">
    <div class="container-fluid">

        <!-- Sayfa Başlığı -->
        <div class="row column_title">
            <div class="col-md-12">
                <div class="page_title">
                    <h2>Rol Yönetimi</h2>
                </div>
            </div>
        </div>

        <!-- Liste Kartı -->
        <div class="row column1">
            <div class="col-md-12">
                <div class="white_shd full margin_bottom_30">

                    <div class="full graph_head">
                        <div class="heading1 margin_0">
                            <h3>Rol Listesi</h3>
                        </div>
                    </div>

                    <div class="full padding_infor_info">
                        <div class="table-responsive">
                            <table class="table table-hover table-striped">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Rol Adı</th>
                                        <th class="text-center">İşlem</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    @{
                                        int count = 0;
                                    }

                                    @foreach (var role in Model)
                                    {
                                        count++;
                                        <tr>
                                            <td>@count</td>
                                            <td>@role.Name</td>
                                            <td class="text-center">
                                                <a href="/Admin/Role/DeleteRole/@role.Id"
                                                   class="btn btn-sm btn-danger"
                                                   onclick="return confirm('Bu rolü silmek istediğine emin misin?');">
                                                    <i class="fa fa-trash"></i> Sil
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <a href="/Admin/Role/CreateRole" class="btn btn-primary mt-3">
                            <i class="fa fa-plus"></i> Yeni Rol Oluştur
                        </a>

                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
