@model List<Blogy.Business.DTOs.UserDtos.ResultUserDto>
@{
    ViewData["Title"] = "Kullanıcılar";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="midde_cont">
    <div class="container-fluid">

        <!-- Sayfa Başlığı -->
        <div class="row column_title">
            <div class="col-md-12">
                <div class="page_title">
                    <h2>Kullanıcılar</h2>
                </div>
            </div>
        </div>

        <!-- Kart -->
        <div class="white_shd full margin_bottom_30">

            <div class="full graph_head">
                <div class="heading1 margin_0">
                    <h3>Kullanıcı Listesi</h3>
                </div>
            </div>

            <div class="full table_section padding_infor_info">
                <div class="table-responsive">

                    <table class="table table-striped table-hover">
                        <thead class="thead-dark">
                            <tr>
                                <th>#</th>
                                <th>Ad Soyad</th>
                                <th>Kullanıcı Adı</th>
                                <th>Email</th>
                                <th>Roller</th>
                                <th class="text-center">İşlemler</th>
                            </tr>
                        </thead>

                        <tbody>
                            @{
                                int count = 1;
                            }

                            @foreach (var user in Model)
                            {
                                <tr>
                                    <td>@count</td>
                                    <td>@user.FullName</td>
                                    <td>@user.UserName</td>
                                    <td>@user.Email</td>
                                    <td>
                                        @foreach (var role in user.Roles)
                                        {
                                            <span class="badge bg-info text-dark">@role</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <a href="/Admin/Users/AssignRole/@user.Id"
                                           class="btn btn-sm btn-warning px-3">
                                            <i class="fa fa-user-shield"></i> Rol Ata
                                        </a>
                                    </td>
                                </tr>

                                count++;
                            }
                        </tbody>

                    </table>

                </div>
            </div>

        </div>

    </div>
</div>
