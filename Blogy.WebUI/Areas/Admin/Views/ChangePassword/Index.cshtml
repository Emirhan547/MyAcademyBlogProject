@model ChangePasswordDto
@{
    ViewData["Title"] = "Şifre Değiştir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="midde_cont">
    <div class="container-fluid">

        <!-- Sayfa Başlığı -->
        <div class="row column_title">
            <div class="col-md-12">
                <div class="page_title">
                    <h2>Şifre Değiştirme</h2>
                </div>
            </div>
        </div>

        <!-- Form -->
        <div class="row column1">
            <div class="col-md-6 offset-md-3">

                <div class="white_shd full margin_bottom_30">

                    <div class="full graph_head">
                        <div class="heading1 margin_0">
                            <h3>Hesap Şifre Güncelleme</h3>
                        </div>
                    </div>

                    <div class="full padding_infor_info">

                        <form method="post">

                            <div class="form-group mb-3">
                                <label class="fw-bold">Mevcut Şifreniz</label>
                                <input type="password" asp-for="CurrentPassword" class="form-control" required />
                                <span class="text-danger" asp-validation-for="CurrentPassword"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label class="fw-bold">Yeni Şifreniz</label>
                                <input type="password" asp-for="NewPassword" class="form-control" required />
                                <span class="text-danger" asp-validation-for="NewPassword"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label class="fw-bold">Yeni Şifre (Tekrar)</label>
                                <input type="password" asp-for="ConfirmPassword" class="form-control" required />
                                <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                            </div>

                            <div class="text-danger mb-2">
                                @Html.ValidationSummary(false)
                            </div>

                            <div class="d-flex justify-content-between mt-3">
                                <a href="/Admin/Dashboard/Index" class="btn btn-secondary">
                                    <i class="fa fa-arrow-left"></i> Geri Dön
                                </a>

                                <button class="btn btn-primary">
                                    <i class="fa fa-key"></i> Şifreyi Güncelle
                                </button>
                            </div>

                        </form>

                    </div>

                </div>

            </div>
        </div>

    </div>
</div>
