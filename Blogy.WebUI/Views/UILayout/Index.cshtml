@{
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="author" content="Blogy">

    <link rel="shortcut icon" href="favicon.png">

    <link href="https://fonts.googleapis.com/css2?family=Work+Sans:wght@400;600;700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/blogy-1.0.0/fonts/icomoon/style.css">
    <link rel="stylesheet" href="~/blogy-1.0.0/fonts/flaticon/font/flaticon.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/blogy-1.0.0/css/tiny-slider.css">
    <link rel="stylesheet" href="~/blogy-1.0.0/css/aos.css">
    <link rel="stylesheet" href="~/blogy-1.0.0/css/glightbox.min.css">
    <link rel="stylesheet" href="~/blogy-1.0.0/css/style.css">
    <link rel="stylesheet" href="~/blogy-1.0.0/css/flatpickr.min.css">

    <title>@ViewData["Title"] - Blogy</title>
</head>
<body>

    <!-- NAVBAR -->
    <nav class="site-nav shadow-sm" style="background:#1c2733;">
        <div class="container">
            <div class="site-navigation py-2">
                <div class="row align-items-center">

                    <!-- Logo -->
                    <div class="col-2">
                        <a href="/Default/Index" class="logo m-0 fw-bold text-white">
                            Blogy<span class="text-primary">.</span>
                        </a>
                    </div>

                    <!-- Menü -->
                    <div class="col-8 text-center">
                        <ul class="js-clone-nav d-none d-lg-inline-block site-menu">
                            <li><a href="/Default/Index" class="text-white">Ana Sayfa</a></li>
                            <li><a href="/Blog/Index" class="text-white">Bloglar</a></li>

                            @* SADECE USER İÇİN İLETİŞİM *@
                            @if (User.Identity?.IsAuthenticated == true && User.IsInRole("User"))
                            {
                                <li><a href="/User/Contact/Index" class="text-white">İletişim</a></li>
                            }

                            <li><a href="/About/Index" class="text-white">Hakkımızda</a></li>

                            @* WRITER PANELİ *@
                            @if (User.Identity?.IsAuthenticated == true && User.IsInRole("Writer"))
                            {
                                <li class="dropdown d-inline-block">
                                    <a href="#" class="dropdown-toggle text-white" data-bs-toggle="dropdown">
                                        Writer Paneli
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" href="/Writer/Blog/Create">Yeni Blog</a></li>
                                        <li><a class="dropdown-item" href="/Writer/Blog/Index">Bloglarım</a></li>
                                    </ul>
                                </li>
                            }
                        </ul>
                    </div>

                    <!-- Kullanıcı Alanı -->
                    <div class="col-2 text-end">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <span class="small me-2 text-white">@User.Identity.Name</span>

                            @if (User.IsInRole("User"))
                            {
                                <a href="/User/Profile/Index" class="btn btn-sm btn-outline-light me-1">Profil</a>
                            }

                            @if (User.IsInRole("Writer"))
                            {
                                <a href="/Writer/Blog/Index" class="btn btn-sm btn-outline-light me-1">Yazar Paneli</a>
                            }

                            <a href="/Login/Logout" class="btn btn-sm btn-primary">Çıkış</a>
                        }
                        else
                        {
                            <a href="/Login/Index" class="btn btn-sm btn-primary me-1">Giriş</a>
                            <a href="/Register/Index" class="btn btn-sm btn-outline-light">Kayıt</a>
                        }
                    </div>

                </div>
            </div>
        </div>
    </nav>

    @RenderSection("Styles", required: false)
    @RenderBody()

    <!-- FOOTER -->
    <footer class="site-footer mt-5 pt-4 pb-3" style="background:#1c2733; color:white;">
        <div class="container">

            <div class="row">

                <div class="col-lg-4 mb-4">
                    <h5 class="fw-bold mb-3">Hakkımızda</h5>
                    @await Component.InvokeAsync("AboutSection")
                </div>

                <div class="col-lg-4 mb-4">
                    <h5 class="fw-bold mb-3">Bağlantılar</h5>
                    <ul class="list-unstyled">
                        <li><a href="/About/Index">Hakkımızda</a></li>

                        @* SADECE USER İÇİN FOOTER İLETİŞİM *@
                        @if (User.Identity?.IsAuthenticated == true && User.IsInRole("User"))
                        {
                            <li><a href="/User/Contact/Index">İletişim</a></li>
                        }

                        <li><a href="/Blog/Index">Bloglar</a></li>
                    </ul>
                </div>

                <div class="col-lg-4 mb-4">
                    <h5 class="fw-bold mb-3">Son Yazılar</h5>
                    @await Component.InvokeAsync("FooterLastBlogs")
                </div>

            </div>

            <div class="text-center mt-3 small" style="color:#ccc;">
                © @DateTime.Now.Year Blogy — Tüm hakları saklıdır.
            </div>

        </div>

        <style>
            .site-footer a {
                color: #d7d7d7 !important;
            }

                .site-footer a:hover {
                    color: white !important;
                }
        </style>
    </footer>

    <!-- JS -->
    <script src="~/blogy-1.0.0/js/bootstrap.bundle.min.js"></script>
    <script src="~/blogy-1.0.0/js/tiny-slider.js"></script>
    <script src="~/blogy-1.0.0/js/flatpickr.min.js"></script>
    <script src="~/blogy-1.0.0/js/aos.js"></script>
    <script src="~/blogy-1.0.0/js/glightbox.min.js"></script>
    <script src="~/blogy-1.0.0/js/navbar.js"></script>
    <script src="~/blogy-1.0.0/js/counter.js"></script>
    <script src="~/blogy-1.0.0/js/custom.js"></script>

    @RenderSection("Scripts", required: false)

</body>
</html>



