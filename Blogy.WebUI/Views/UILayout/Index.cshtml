@{
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="author" content="Untree.co">

    <link rel="shortcut icon" href="favicon.png">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Work+Sans:wght@400;600;700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/blogy-1.0.0/fonts/icomoon/style.css">
    <link rel="stylesheet" href="~/blogy-1.0.0/fonts/flaticon/font/flaticon.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/blogy-1.0.0/css/tiny-slider.css">
    <link rel="stylesheet" href="~/blogy-1.0.0/css/aos.css">
    <link rel="stylesheet" href="~/blogy-1.0.0/css/glightbox.min.css">
    <link rel="stylesheet" href="~/blogy-1.0.0/css/style.css">
    <link rel="stylesheet" href="~/blogy-1.0.0/css/flatpickr.min.css">

    <title>Blogy</title>
</head>
<body>

    <!-- Mobile Menu -->
    <div class="site-mobile-menu site-navbar-target">
        <div class="site-mobile-menu-header">
            <div class="site-mobile-menu-close">
                <span class="icofont-close js-menu-toggle"></span>
            </div>
        </div>
        <div class="site-mobile-menu-body"></div>
    </div>

    <!-- KÜÇÜLTÜLMÜŞ NAVBAR -->
    <nav class="site-nav">
        <div class="container">

            <div class="site-navigation" style="padding: 5px 0;">
                <div class="row g-0 align-items-center" style="min-height:60px;">

                    <!-- Logo -->
                    <div class="col-2">
                        <a href="/Default/Index" class="logo m-0">Blogy<span class="text-primary">.</span></a>
                    </div>

                    <!-- Menü -->
                    <div class="col-8 text-center">

                        <ul class="js-clone-nav d-none d-lg-inline-block site-menu mx-auto" style="margin:0;">
                            <li class="@(Context.Request.Path.Value?.StartsWith("/Default") == true ? "active" : "")">
                                <a href="/Default/Index">Ana Sayfa</a>
                            </li>
                            <li><a href="/Blog/Index">Bloglar</a></li>
                            <li><a href="/Contact/Index">İletişim</a></li>
                            <li><a href="/About/Index">Hakkımızda</a></li>

                            <!-- Writer Menü -->
                            @if (User.Identity?.IsAuthenticated ?? false && User.IsInRole("Writer"))
                            {
                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-bs-toggle="dropdown">
                                        Writer Paneli
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" href="/Writer/Blog/Create">Blog Yaz</a></li>
                                        <li><a class="dropdown-item" href="/Writer/Blog/Index">Bloglarım</a></li>
                                    </ul>
                                </li>
                            }
                        </ul>

                    </div>

                    <!-- Sağ Bölüm (Login / Profil) -->
                    <div class="col-2 text-end">

                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            <span class="small me-2">@User.Identity.Name</span>

                            @if (User.IsInRole("User"))
                            {
                                <a href="/User/Home/Index" class="btn btn-sm btn-outline-light me-1">Profilim</a>
                            }
                            @if (User.IsInRole("Writer"))
                            {
                                <a href="/Writer/Blog/Index" class="btn btn-sm btn-outline-light me-1">Yazar Paneli</a>
                            }

                            <a href="/Login/Logout" class="btn btn-sm btn-primary">Çıkış Yap</a>
                        }
                        else
                        {
                            <a href="/Login/Index" class="btn btn-sm btn-primary me-1">Giriş</a>
                            <a href="/Register/Index" class="btn btn-sm btn-outline-light">Kayıt</a>
                        }

                    </div>
                </div>
            </div>

        </div>
    </nav>

    @RenderBody()

    <!-- KÜÇÜLTÜLMÜŞ FOOTER -->
    <footer class="site-footer" style="padding-top:25px; padding-bottom:15px;">
        <div class="container">

            <div class="row">

                <!-- About + Social -->
                <div class="col-lg-4">
                    <div class="widget" style="margin-bottom:15px;">
                        <h3 class="mb-3">About</h3>
                        @await Component.InvokeAsync("AboutSection")
                    </div>

                    <div class="widget" style="margin-bottom:10px;">
                        <h3 class="mb-3">Social</h3>
                        @await Component.InvokeAsync("SocialList")
                    </div>
                </div>

                <!-- Company -->
                <div class="col-lg-4 ps-lg-4">
                    <div class="widget" style="margin-bottom:10px;">
                        <h3 class="mb-3">Company</h3>
                        <ul class="list-unstyled links">
                            <li><a href="/About/Index">About</a></li>
                            <li><a href="/Contact/Index">Contact</a></li>
                            <li><a href="/Blog/Index">Blog</a></li>
                        </ul>
                    </div>
                </div>

                <!-- Recent Posts -->
                <div class="col-lg-4">
                    <div class="widget" style="margin-bottom:10px;">
                        <h3 class="mb-3">Recent Posts</h3>
                        @await Component.InvokeAsync("FooterLastBlogs")
                    </div>
                </div>

            </div>

            <div class="row mt-3">
                <div class="col-12 text-center">
                    <p class="small m-0">
                        © @DateTime.Now.Year Blogy — Tüm Hakları Saklıdır.
                    </p>
                </div>
            </div>

        </div>
    </footer>

</body>
</html>
