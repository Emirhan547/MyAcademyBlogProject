@model List<ResultBlogDto>

<div class="post-entry-footer">
    <ul>
        @foreach (var blog in Model)
        {
            <li>
                <a href="/Blog/Detail/@blog.Id">
                    <img src="@blog.CoverImage" alt="Image placeholder" class="me-4 rounded">
                    <div class="text">
                        <h4>@blog.Title</h4>
                        <div class="post-meta">
                            <span class="mr-2">@blog.CreatedDate.ToShortDateString()</span>
                        </div>
                    </div>
                </a>
            </li>
        }
    </ul>
</div>
