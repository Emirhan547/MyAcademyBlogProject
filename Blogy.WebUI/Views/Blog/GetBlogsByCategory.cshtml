@model List<ResultBlogDto>
@{
    ViewData["Title"] = "Kategori: " + ViewBag.CategoryName;
    Layout = "~/Views/UILayout/Index.cshtml";
}

<!-- Hero Section -->
<div class="hero overlay inner-page bg-primary py-5">
    <div class="container">
        <div class="row align-items-center justify-content-center text-center pt-5">
            <div class="col-lg-6">
                <h1 class="heading text-white mb-3" data-aos="fade-up">
                    @ViewBag.CategoryName
                </h1>
                <p class="text-white-50">@Model.Count blog bulundu</p>
            </div>
        </div>
    </div>
</div>

<!-- Blog List Section -->
<div class="section search-result-wrap">
    <div class="container">
        <div class="row posts-entry">

            <!-- Sol Blog Listesi -->
            <div class="col-lg-8">

                @if (Model.Count == 0)
                {
                    <div class="alert alert-info">
                        Bu kategoride henüz blog yazısı bulunmamaktadır.
                    </div>
                }
                else
                {
                    @foreach (var item in Model)
                    {
                        <div class="blog-entry d-flex blog-entry-search-item mb-4">
                            <a href="/Blog/Detail/@item.Id" class="img-link me-4">
                                <img src="@item.CoverImage" alt="@item.Title" class="img-fluid" style="width:200px; height:150px; object-fit:cover; border-radius:8px;">
                            </a>
                            <div>
                                <span class="date">
                                    @item.CreatedDate.ToShortDateString() &bullet;
                                    <a href="/Blog/GetBlogsByCategory/@item.CategoryId">@item.Category.Name</a>
                                </span>
                                <h2><a href="/Blog/Detail/@item.Id">@item.Title</a></h2>
                                <p>
                                    @(item.Description.Length < 150
                                                                ? item.Description
                                                                : item.Description.Substring(0, 150) + "...")
                        </p>
                        <p>
                            <a href="/Blog/Detail/@item.Id" class="btn btn-sm btn-outline-primary">
                                Devamını Oku
                            </a>
                        </p>
                    </div>
                </div>
                                }
                }

            </div>

            <!-- Sağ Sidebar -->
            <div class="col-lg-4 sidebar">

                <!-- Arama -->
                <div class="sidebar-box search-form-wrap mb-4">
                    <form class="sidebar-search-form">
                        <span class="bi-search"></span>
                        <input type="text" class="form-control" placeholder="Ara...">
                    </form>
                </div>

                <!-- Son Bloglar -->
                @await Component.InvokeAsync("BlogsByCategoryLatestBlogs")

                <hr />

                <!-- Kategoriler -->
                @await Component.InvokeAsync("CategoryListSidebar")

            </div>

        </div>
    </div>
</div>