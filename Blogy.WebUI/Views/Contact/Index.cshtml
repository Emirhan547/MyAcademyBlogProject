@using Blogy.Entity.Entities
@model ContactMessage
@{
    Layout = "~/Views/UILayout/Index.cshtml";
}

<section class="section">
    <div class="container">
        <h2>Bize Yazın</h2>

        <form method="post">

            <div class="mb-3">
                <label>Ad Soyad</label>
                <input asp-for="SenderName" class="form-control" required />
            </div>

            <div class="mb-3">
                <label>Email</label>
                <input asp-for="SenderEmail" class="form-control" type="email" required />
            </div>

            <div class="mb-3">
                <label>Konu</label>
                <input asp-for="Subject" class="form-control" required />
            </div>

            <div class="mb-3">
                <label>Mesaj</label>
                <textarea asp-for="Message" class="form-control" rows="5" required></textarea>
            </div>

            <button class="btn btn-primary">Gönder</button>
        </form>
    </div>
</section>
